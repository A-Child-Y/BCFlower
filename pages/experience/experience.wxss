/* pages/experience/experience.wxss */
page{
  background-color: #f6f6f6;
  height: 98%;
}
#form{
  z-index: 5;
  height: 100%;
}
.form-view{
  margin-top: 15rpx;
  font-size: 30rpx;
  padding-left:20rpx; 
  color: #515151;
  height: 50rpx;
  line-height: 50rpx;
}
.form-input{
  background-color: #fff;
  margin-top: 15rpx;
  height: 90rpx;
  padding-left:20rpx; 
}
.form-msg{
  font-size: 25rpx;
  color: #515151;
  text-align: center;
  margin-top: 50rpx;
}
button{
  width: 70%;
  margin: 0 auto;
  background-color: #3CB371;
  margin-top: 130rpx;
  color: #fff;
  z-index: 2;
}
.hide{
  width:100%;
  height:100%;
  opacity: 0.5;
  position: absolute;
  top: 0;
  left: 0;
}
.hide-msg{
  background-color: #fff;
  width: 80%;
  height: 260rpx;
  border-radius: 20rpx;
  position: absolute;
  top: calc((100% - 500rpx) / 2);
  left: calc((100% - 80%) / 2);
  text-align: center;
  z-index: 2;
}
.hide-msg view:nth-of-type(1){
  width: 100%;
  height: 160rpx;
  border-bottom: 1px solid gray;
  line-height: 160rpx;
  z-index: 2;
}  
.hide-msg view:nth-of-type(2){
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #3CB371;
  z-index: 2;
}
