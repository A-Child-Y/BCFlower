.course-div{
  display: flex;
  margin-bottom: 25rpx;
}
.course-div .course-body{
  position: relative;
  width: 70%;
}
.course-div .course-title{
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  font-size: 30rpx;
}
.course-div .course-info{
  background-color: wheat;
}
.course-div .course-info .course-one{
  font-size: 30rpx;
  position: absolute;
  bottom: 10rpx;
  left: 20rpx;
  color: orange;
}
.course-div .course-info .course-two{
  font-size: 26rpx;
  position: absolute;
  bottom: 10rpx;
  left: 150rpx;
  color: #707070;
  text-decoration: line-through;
}
.course-div .course-info .course-three{
  position: absolute;
  bottom: 10rpx;
  font-size: 26rpx;
  right: 20rpx;
  color: #707070;
}
.course-div .course-img{
  width: 200rpx;
  height: 150rpx;
}
.course-div .course-img image{
  width: 100%;
  height: 100%;
  border-radius: 30rpx; 
}