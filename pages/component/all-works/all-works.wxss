
.works-info{
  width: 95%;
  background-color: #fff;
  padding: 10rpx;
  margin: 20rpx auto;
  border-radius: 20rpx;

}
.works-title{
  font-size: 35rpx;
  margin-bottom: 20rpx;
  margin: 20rpx 0;
}
.works-img{
  width: 100%;
  display: flex;
  justify-content: start;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}
.works-img image{
  width: 30%;
  height: 200rpx;
  margin: 5rpx 5rpx;
  border-radius: 10rpx;
}
